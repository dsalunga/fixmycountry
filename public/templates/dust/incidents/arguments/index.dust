{>"dust/layouts/master" /}

{<title}
    Issues: {topic.title} - {titleSlogan}
{/title}

{<body}
    {?incident}
        {>"dust/incidents/index-header" tab="arguments" /}
    {:else}
        {>"dust/incidents/index-header" tab="top-arguments" /}
    {/incident}
    <ul class="list-group">
        <li class="list-group-item highlight"><span class="glyphicon glyphicon-flash text-success" aria-hidden="true"></span> Issues</li>
        {#arguments}
            <li class="list-group-item"><span class="glyphicon glyphicon-file text-success" aria-hidden="true"></span> <a href="{paths.incidents.arguments.entry}?incident={incident._id}&amp;argument={_id}">{title}</a> <span class="pull-right"><span class="glyphicon glyphicon-comment" aria-hidden="true"></span> {comments}</span></li>
        {/arguments}
    </ul>
{/body}
